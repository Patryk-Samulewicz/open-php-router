{
    "name": "patryk-samulewicz/open-php-router",
    "description": "A modern PHP package for OpenRouter API integration",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Patryk Samulewicz",
            "email": "p.samulewicz@senuto.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "OpenPhpRouter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenPhpRouter\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 